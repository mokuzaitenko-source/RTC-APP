# Assistant provider mode: auto | openai | local
# Local-first default for daily use (no API key required).
ASSISTANT_PROVIDER_MODE=local
# Switch to openai or auto when OPENAI_API_KEY is configured.

# ACA orchestrator runtime toggle: 1=enabled, 0=legacy assistant flow
ASSISTANT_ACA_ENABLED=1

# Required when provider mode resolves to OpenAI.
OPENAI_API_KEY=

# Default model used when no explicit model is selected.
ASSISTANT_OPENAI_MODEL=gpt-4.1-mini

# Allowed models shown in UI model picker and accepted by backend.
ASSISTANT_OPENAI_MODELS=gpt-4.1-mini,gpt-4o-mini

# Request timeout (seconds) for OpenAI provider calls.
ASSISTANT_OPENAI_TIMEOUT_S=30

# In-memory assistant session retention (seconds).
ASSISTANT_SESSION_TTL_S=21600

# Maximum turns stored per session.
ASSISTANT_SESSION_MAX_TURNS=80

# Number of recent turns used as context.
ASSISTANT_SESSION_CONTEXT_TURNS=12

# Prompt-book autoloop settings
AUTOLOOP_MODEL=gpt-4.1-mini
AUTOLOOP_TARGET_X=100
AUTOLOOP_MAX_CYCLES=12
AUTOLOOP_MAX_MINUTES=180
AUTOLOOP_AUTOCOMMIT=1
AUTOLOOP_LOCK_GATE=1
AUTOLOOP_PROFILE=strict
AUTOLOOP_DEV_STACK_V2=0
AUTOLOOP_UPGRADE_TARGET=10
AUTOLOOP_DEV3_MODE=local
AUTOLOOP_DEV4_POLICY=strict
AUTOLOOP_RESEARCH_POLICY=primary_docs
AUTOLOOP_DEV7_BLOCK_ON_SAFETY=1
AUTOLOOP_DEV8_REQUIRE_RELEASE_PASS=1
AUTOLOOP_MAX_REVISION_ATTEMPTS=1
AUTOLOOP_DEBUG_PACK=standard
